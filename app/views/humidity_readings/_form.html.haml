= form_for @humidity_reading do |f|
  - if @humidity_reading.errors.any?
    #error_explanation
      %h2= "#{pluralize(@humidity_reading.errors.count, "error")} prohibited this humidity_reading from being saved:"
      %ul
        - @humidity_reading.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :humidity
    = f.number_field :humidity
  .actions
    = f.submit 'Save'
